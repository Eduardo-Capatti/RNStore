<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/carrinho.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/css/produto.css" asp-append-version="true">
    <script src="https://kit.fontawesome.com/4550765f78.js" crossorigin="anonymous"></script>

   
</head>
<body class="bg-light">
    
 
    @await Html.PartialAsync("_Menu")
    
    <div class="container my-5" style="flex:1">
        <div class="row">

            <div class="col-lg-8">
                <div class="item-card">
                    <h4 class="mb-4">Produtos (1)</h4> 

                    <div class="d-flex align-items-start border-bottom pb-3 mb-3">
                        <div class="me-3 mt-1">
                            <input class="form-check-input" type="checkbox" checked>
                        </div>
                        <div class="me-3">

                            <img src="" alt="Tênis Esportivo" width="80" height="80" class="img-thumbnail">
                        </div>
                        <div class="flex-grow-1">
                            <p class="mb-1">
                                <strong class="text-dark">Tênis Esportivo Masculino Delta Com Cabedal E...</strong>
                            </p>
                            <a href="#" class="text-danger small" title="Remover">Excluir</a>
                            <div class="d-flex align-items-center mt-2">
                                <label for="quantidade-item" class="me-2 small">Quantidade:</label>
                                <div class="input-group input-group-sm" style="width: 100px;">
                                    <button class="btn btn-outline-secondary" type="button">-</button>
                                    <input type="number" class="form-control text-center" value="1" min="1" style="max-width: 50px;" id="quantidade-item">
                                    <button class="btn btn-outline-secondary" type="button">+</button>
                                </div>
                                <span class="ms-3 small text-muted">+50 disponíveis</span>
                            </div>
                        </div>
                        <div class="text-end">
                            <span class="text-original-price">R$ 199,99</span>
                            <span class="badge bg-success-subtle text-discount me-2">-27%</span>
                            <h4 class="mb-0 text-dark">R$ 145,99</h4>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between pt-2">
                        <h5 class="mb-0 text-muted">Frete</h5>
                        <h5 class="mb-0 text-success">Grátis</h5>
                    </div>
                    
                    </div>
            </div>

            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="card resumo-card">
                    <div class="card-body">
                        <h4 class="card-title mb-3">Resumo da compra</h4>
                        <hr class="my-2">
                        
                        <div class="d-flex justify-content-between mt-3">
                            <span class="text-muted">Produto</span>
                            <div class="text-end">
                                <div class="text-original-price">R$ 199,99</div>
                                <div class="text-dark">R$ 145,99</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-2">
                            <span class="text-muted">Frete</span>
                            <span class="text-success">Grátis</span>
                        </div>
                        
                        <hr class="my-3">

                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Total</h5>
                            <h3 class="mb-0 text-dark">R$ 145,99</h3>
                        </div>
                        
                        <div class="d-grid mt-4">
                            <button type="button" class="btn btn-ml-primary btn-lg">Continuar a compra</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


    @await Html.PartialAsync("_Footer");

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>