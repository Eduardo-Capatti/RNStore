@model RNStore.Models.Catalogo
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/Inicio.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/css/Produto.css" asp-append-version="true">
    <script src="https://kit.fontawesome.com/4550765f78.js" crossorigin="anonymous"></script>
</head>

<script>
    function acessarProduto(idProduto, calcadoId) {
        window.location.href = "/Catalogo/Produto/" + idProduto + "/" + calcadoId
    }
</script>

<body class="bg-light">
    @await Html.PartialAsync("_Menu")
    <main style="flex:1">
        @if(Model.slides.Any()){
            <div id="carouselExample" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
                <div class="carousel-indicators">
                    @{int total = Model.slides.Count;}
                    @if(total > 1){
                        @for(int j = 0; j < Model.slides.Count; j++){
                            if(j == 0){
                                <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="@j" class="active" aria-current="true"></button>
                            }else{
                                <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="@j" aria-current="true"></button>
                            }
                        }
                    }
                    
                    
                </div>
                <div class="carousel-inner">
                    @{
                        int i = 1;
                        foreach (var sliders in Model.slides)
                        {
                           
                            if (i == 1)
                            {
                                <div class="carousel-item active">
                                    <img class=" w-100 promo" src="~/img/slider/@sliders.img" alt="">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100 promo" src="~/img/slider/@sliders.img" alt="">
                                </div>
                            }

                        }
                    
                    }
                </div>
            </div>
        }


        <div class="container">

            <div class="row">
                @foreach (var produto in Model.catalogo)
                {
                    <div class="col-3 mt-5" onclick="acessarProduto(@produto.idProduto, @produto.calcadoId)">
                        <div class="card h-100">
                            @{

                                var imagem = produto.ApenasImagemPrincipal?.FirstOrDefault();
                            }
                            @if (@imagem != null)
                            {
                                <img height="200px" class="card-img-top" src="~/img/produtos/@imagem">
                            }
                            else
                            {
                                <img height="200px" class="card-img-top" src="~/img/produtos/padrao1.png">
                            }
                            <div class="card-body">
                                <h5 class="card-title">
                                    <p class="stretched-link text-decoration-none text-dark mb-0">
                                        @produto.nomeCalcado
                                    </p>
                                </h5>
                                @if (produto.promocao > 0)
                                {
                                    <h4 class="card-title"><s>R$@produto.preco.ToString("F2")</s></h4>
                                    var valor = produto.preco - produto.promocao.Value;
                                    <h3 class="card-subtitle">R$@valor.ToString("F2")</h3>
                                }
                                else
                                {
                                    <h4 class="card-title">R$@produto.preco.ToString("F2")</h4>
                                }

                                <p class="card-text">@produto.marcaCalcado</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </main>

    @await Html.PartialAsync("_Footer")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
