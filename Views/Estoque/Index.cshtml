@model List<RNStore.Models.Estoque>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estoque</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <link rel="stylesheet" type="text/css" href="~/css/produto.css" asp-append-version="true">
    
    <script src="https://kit.fontawesome.com/4550765f78.js" crossorigin="anonymous"></script>

    <style>
        .valor-input-group {
            display: flex;
            gap: 10px; 
        }
        .dropdown-menu-custom {
            min-width: 280px; 
            max-height: 450px; 
            overflow-y: auto;
        }
        .dropdown-footer {
            padding-top: 10px;
            border-top: 1px solid #dee2e6; 
            text-align: right; 
        }
        
    </style>

    <script>
        setTimeout(() => {
            let alert = document.querySelector('.alert');
            if (alert) {
                let bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 4000);
    </script>
</head>
<body class="d-flex flex-column vh-100">

    @await Html.PartialAsync("_MenuEstoque")

    
    <div class="flex-grow-1">
        <div class="container">

            <div>
                <div class="container mt-3">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    <h1 class="text-center my-5">Listagem de Produto</h1>
                    <div class="d-flex justify-content-end">
                        
                        <div class="dropdown">
                            <a href="/Estoque/Index" class="btn btn-danger">Tirar Filtro</a>
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                                Filtro
                            </button>
                            <form action="/Estoque/Filtrar" method="POST">
                                <ul class="dropdown-menu dropdown-menu-end p-3 dropdown-menu-custom" aria-labelledby="dropdownMenuButton">
                                    
                                    <li><h6 class="dropdown-header">Código</h6></li>
                                    <li>
                                        <div class="p-2 pt-0 pb-0">
                                            <input type="text" class="form-control form-control-sm" name="idProduto" placeholder="Digite o código" aria-label="Código">
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li> 

                                    <li><h6 class="dropdown-header">Nome</h6></li>
                                    <li>
                                        <div class="p-2 pt-0 pb-0">
                                            <input type="text" name="nomeCalcado" class="form-control form-control-sm" placeholder="Digite o nome" aria-label="Nome">
                                        </div>
                                    </li>
                                    
                                    <li><hr class="dropdown-divider"></li> 

                                    <li><h6 class="dropdown-header">Valor</h6></li>
                                    <li>
                                        <div class="valor-input-group p-2 pt-0">
                                            <input type="number" name="valorMinimo" class="form-control form-control-sm" placeholder="Mínimo" aria-label="Valor Mínimo" min="0" step="0.1">
                                            <input type="number" name="valorMaximo" class="form-control form-control-sm" placeholder="Máximo" aria-label="Valor Máximo" min="0" step="0.1">
                                        </div>
                                    </li>
                                    
                                    <li><hr class="dropdown-divider"></li> 

                                    <li>
                                        <button class="dropdown-item fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCores" aria-expanded="false" aria-controls="collapseCores">
                                            Cores
                                        </button>
                                    </li>
                                    
                                    <li>
                                        <div class="collapse" id="collapseCores">
                                            <ul class="list-unstyled p-2">
                                                <div class="row">
                                                    @foreach(var cores in ViewBag.Filtros.cores){
                                                        <div class="col-6">
                                                            <li>
                                                                <div class="form-check dropdown-item-text">
                                                                    <input class="form-check-input" type="checkbox" value="@cores.idCor" name="coresSelecionadas">
                                                                    <label class="form-check-label" for="checkbox(@cores.idCor)">@cores.nomeCor</label>
                                                                </div>
                                                            </li>
                                                        </div>
                                                    }
                                                </div>
                                            </ul>
                                        </div>
                                    </li>
                                    
                                    <li><hr class="dropdown-divider"></li> 

                                    <li>
                                        <button class="dropdown-item fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapseMarca" aria-expanded="false" aria-controls="collapseMarca">
                                            Marca
                                        </button>
                                    </li>
                                    
                                    <li>
                                        <div class="collapse" id="collapseMarca">
                                            <ul class="list-unstyled p-2">
                                                <div class="row">
                                                    @foreach(var marcas in ViewBag.Filtros.marcas){
                                                        <div class="col-6">
                                                            <li>
                                                                <div class="form-check dropdown-item-text">
                                                                    <input class="form-check-input" type="checkbox" value="@marcas.idMarca" name="marcasSelecionadas">
                                                                    <label class="form-check-label" for="checkbox(@marcas.idMarca)">@marcas.nomeMarca</label>
                                                                </div>
                                                            </li>
                                                        </div>
                                                    }
                                                </div>
                                            </ul>
                                        </div>
                                    </li>
                                    
                                    <li><hr class="dropdown-divider"></li> 

                                    <li>
                                        <button class="dropdown-item fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTamanho" aria-expanded="false" aria-controls="collapseTamanho">
                                            Tamanho
                                        </button>
                                    </li>
                                    
                                    <li>
                                        <div class="collapse" id="collapseTamanho">
                                            <ul class="list-unstyled p-2">
                                                <div class="row">
                                                    @foreach(var tamanhos in ViewBag.Filtros.tamanhos){
                                                        <div class="col-6">
                                                            <li>
                                                                <div class="form-check dropdown-item-text">
                                                                    <input class="form-check-input" type="checkbox" value="@tamanhos.idTamanho" name="tamanhosSelecionados">
                                                                    <label class="form-check-label" for="checkbox(@tamanhos.idTamanho)">@tamanhos.tamanho</label>
                                                                </div>
                                                            </li>
                                                        </div>
                                                    }    
                                                </div>
                                            </ul>
                                        </div>
                                    </li>

                                    <li class="dropdown-footer">
                                        <button type="submit" class="btn btn-secondary btn-sm">Filtrar</button>
                                    </li>
                                    
                                </ul>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>

            <table class="table table-striped table-bordered table-hover mt-3">
                <thead>
                    <tr>
                        <th scope="col" >COD</th>           
                        <th scope="col" >Marca</th>   
                        <th scope="col" >Calçado</th>      
                        <th scope="col" >Fornecedor</th>    
                        <th scope="col" >Quantidade</th>    
                        <th scope="col" >Preço</th>   
                        <th scope="col" >Promoção</th>          
                        <th scope="col" >Tamanho</th>   
                        <th scope="col">Cor</th>   
                        <th scope="col">Status</th>     
                        
                        <th scope="col" class="text-center">Opções</th> 
                    </tr>
                </thead>

                <tbody>
                    @if (Model.FirstOrDefault() == null){
                        <td colspan="11" class="text-center">Nenhum registro encontrado</td>
                    }else{
                    @foreach(var estoque in Model){
                        <tr>
                            <th scope="row">@estoque.idProduto</th>
                            <td>@estoque.nomeMarca</td>
                            <td>@estoque.nomeCalcado</td>
                            <td>@estoque.nomeFornecedor</td>
                            <td>@estoque.qtd</td>
                            <td>R$@estoque.preco.ToString("F2")</td>
                            <td>R$@estoque.promocao?.ToString("F2")</td>
                            <td>@estoque.tamanho</td>
                            <td>@estoque.nomeCor</td>
                            <td>@estoque.statusEstoque</td>
                            
                            <td class="text-center">
                                <a href="/Estoque/Delete?idEstoque=@estoque.idProduto"  class="btn btn-sm text-danger">
                                    <i class="fa-solid fa-trash"></i>

                                </a>

                                <a href="/Estoque/Update?idEstoque=@estoque.idProduto"  class="btn btn-sm text-primary">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                            </td>
                        </tr>

                    }}
                </tbody>
            </table>

            <div class="d-flex justify-content-between">
                <a href="/Estoque/Create" asp-action="AddProd" class="btn btn-secondary">Adicionar</a>
            </div>
        </div>
    </div>
    
    <footer class="py-3 mt-5 bg-dark" id="rodape">
        <div class="container text-white">
            <div class="row justify-content-center pt-4">

                <div class="col-12 align-self-center text-center">
                    <h5 class="mt-3 mt-md-0">Copyright © 2025 Innovatech. Todos os direitos reservados.</h5>
                </div>

            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>