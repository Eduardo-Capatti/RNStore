@using RNStore.Models
@model RNStore.Models.Estoque;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estoque</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <link rel="stylesheet" type="text/css" href="~/css/produto.css" asp-append-version="true">
    
    <script src="https://kit.fontawesome.com/4550765f78.js" crossorigin="anonymous"></script>

</head>

    <style>
        .input-group-text{
            width: 200px;
        }

        .form-select, .input-group{
            margin: 10px 0;
        }
    </style>

    <script>
        setTimeout(() => {
            let alert = document.querySelector('.alert');
            if (alert) {
                let bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 4000);
    </script>
<body class="d-flex flex-column vh-100">

    @await Html.PartialAsync("_MenuEstoque")
    <div class="flex-grow-1">
        <div class="container">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <h1 class="text-center my-5">Atualizando Produto</h1>
            <form action="/Estoque/Update" method="POST" class="my-5">
                <div class="mt-5">
                    <div class="row">
                    
                        
                        <div class="col-6">
                            <div class="input-group">
                                <label class="input-group-text" for="nomeCalcado">Preço</label>
                                <input class="form-control" name="preco" id="preco" type="text" placeholder="digite o preço" value="@Model.preco.ToString("F2")"/>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="input-group">
                                <label class="input-group-text" for="nomeCalcado">Quantidade</label>
                                <input class="form-control" name="qtd" id="qtd" type="number" placeholder="informe a quantidade do produto" min="0" step="1" value="@Model.qtd"/>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="input-group">
                                <label class="input-group-text" for="valorIE">Preço do fornecedor</label>
                                <input class="form-control" name="valorIE" id="valorIE" type="text" placeholder="informe o preço da compra do produto" value="@Model.valorIE.ToString("F2")"/>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="input-group">
                                <label class="input-group-text" for="valorIE">Promoção</label>
                                <input class="form-control" name="promocao" id="promocao" type="text" placeholder="informe o preço da compra do produto" value="@Model.promocao?.ToString("F2")"/>
                            </div>
                        </div>


                        <input type="hidden" name="idProduto" id="idProduto" value="@Model.idProduto" />
                        <input type="hidden" name="idFornecedor" id="idFornecedor" value="@Model.idFornecedor" />

                        <div class="col-12 mt-3">
                            <div class="col-6">
                                <a href="/Estoque/Index" class="btn btn-primary" >Voltar</a>
                                <button type="submit" class="btn btn-dark" >Atualizar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            <hr />

            <table class="table table-striped table-bordered table-hover my-5">
                <thead class="text-center">
                    <tr>
                        <th scope="col" >COD</th>           
                        <th scope="col" >Imagem</th>         
                        <th scope="col" >Imagem Principal</th>    
                        
                        <th scope="col" class="text-center"></th> <th scope="col" class="text-center"></th> </tr>
                </thead>

                <tbody>
                    @{
                    if(Model.imagens == null || !Model.imagens.Any()){
                        <tr class="text-center">
                           
                            <td colspan="5">Nenhuma imagem encontrada</td>
                            
                        </tr>
                    }else{

                  
                    @foreach(var imagens in Model.imagens){
                             
                        <tr class="text-center">
                           
                            <td>@imagens.idImagem</td>
                            <td><img width="200px" src="~/img/produtos/@imagens.nomeImagem" /></td>
                            <td>
                                @if(@imagens.statusImagem == 1)
                                {
                                    <i class="fa-solid fa-circle-check text-success"></i>
                                }else{
                                    <i class="fa-solid fa-circle-xmark text-danger"></i>

                                }
                            </td>
                            <td>
                                <form action="/Estoque/UpdateImg" id="form_@imagens.idImagem" method="POST">
                                    <input type="radio" onclick="document.getElementById('form_@imagens.idImagem').submit()" @(imagens.statusImagem == 1 ? "checked" : null) />
                                    <input type="hidden" name="idImagem" value="@imagens.idImagem"/>
                                    <input type="hidden" name="calcadoId" value="@Model.calcadoId"/>
                                    <input type="hidden" name="corId" value="@Model.corId"/>
                                    <input type="hidden" name="idProduto" value="@Model.idProduto"/>
                                </form>
                            </td>
                            
                            <td class="text-center">
                                <a href="/Estoque/DeleteImg?idImagem=@imagens.idImagem"  class="btn btn-sm text-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>

                    }
                    } 
                    }
                </tbody>
            </table>

            <form action="/Estoque/CreateImg" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-6 align-self-center">
                        <div class="input-group">
                            <input class="form-control" name="downloadImg" id="downloadImg" type="file" accept="image/*"/>
                            <button type="submit" class="btn btn-dark">Adicionar Imagem</button>
                        </div>
                    </div>

                    <input class="form-control" name="corId" id="corId" type="hidden" value="@Model.corId"/>
                    <input class="form-control" name="calcadoId" id="calcadoId" type="hidden" value="@Model.calcadoId"/>
                    <input class="form-control" name="idProduto" id="idProduto" type="hidden" value="@Model.idProduto"/>
                </div>
            </form>
        </div>
    </div>
    
    <footer class="py-3 mt-5 bg-dark" id="rodape">
        <div class="container text-white">
            <div class="row justify-content-center pt-4">

                <div class="col-12 align-self-center text-center">
                    <h5 class="mt-3 mt-md-0">Copyright © 2025 Innovatech. Todos os direitos reservados.</h5>
                </div>

            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>