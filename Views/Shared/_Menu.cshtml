<!--Navbar-->
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<nav class="navbar navbar-dark navbar-expand-md bg-dark">
    <div class="container d-flex justify-content-between align-items-center">
        <a href="/Catalogo/Index">
            <img class="navbar-brand" src="~/img/rnstore.png" width="140px">       
        </a>


        <form action="/Catalogo/Buscar" method="POST" class="mx-auto" style="width: 60%;">
            <div class="input-group">
                <input class="form-control" type="text" id="buscarProduto" name="buscarProduto" placeholder="Buscar produto...">
                <button type="submit" class="input-group-text"><i class="fa fa-search"></i></button>
            </div>
        </form>

        @if(HttpContextAccessor.HttpContext.Session.GetInt32("idCliente") == null){
            <a class="nav-link text-white" href="/Cliente/Login" style="font-size:16px">Entrar</a>
            <a class="nav-link text-white" href="/Cliente/Cadastro" style="font-size:16px">Cadastre-se</a>
        }else{
            <a class="nav-link text-white" href="/Cliente/Sair" style="font-size:16px">Sair</a>
        }
        
        <a class="nav-link text-white" href="/Catalogo/Carrinho" style="font-size:30px"><i class="fa fa-shopping-cart" style="color: transparent; -webkit-text-stroke: 1px white;"></i></a>

        
    </div>
</nav>
