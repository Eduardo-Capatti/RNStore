@model List<RNStore.Models.Tamanho>;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estoque</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <link rel="stylesheet" type="text/css" href="~/css/produto.css" asp-append-version="true">
    
    <script src="https://kit.fontawesome.com/4550765f78.js" crossorigin="anonymous"></script>

    <style>
        .valor-input-group {
            display: flex;
            gap: 10px; 
        }
        .dropdown-menu-custom {
            min-width: 280px; 
            max-height: 450px; 
            overflow-y: auto;
        }
        .dropdown-footer {
            padding-top: 10px;
            border-top: 1px solid #dee2e6; 
            text-align: right; 
        }
        
    </style>
</head>
<body class="d-flex flex-column vh-100">

    <nav class="navbar navbar-dark navbar-expand-md bg-dark">
        <div class="container d-flex justify-content-between align-items-center">
            <a href="/Estoque/Index">
                <img class="navbar-brand" src="~/img/rnstore.png" width="140px" alt="Logo RN Store">      
            </a>

            <div class="d-flex gap-5 align-items-center">   
                <a href="#" style="font-size: 20px;">
                    Sair
                </a>
            </div>
        </div>
    </nav>

    <div class="flex-grow-1">
        <div class="container">

            <div class="my-5">
                <form action="/Tamanho/Create" method="POST">
                    <label class="form-label" for="tamanho">Novo Tamanho</label>
                    <div class="input-group">
                        <input name="tamanho" id="tamanho" class="form-control" type="text" placeholder="novo tamanho" />
                        <button type="submit" class="btn btn-dark" >Adicionar</button>
                    </div>
                </form>
            </div>

            <table class="table table-striped table-bordered table-hover mt-3">
                <thead>
                    <tr>
                        <th scope="col" >COD</th>           
                        <th scope="col" >Tamanho</th>         
                        
                        <th scope="col" class="text-center"></th> 
                        <th scope="col" class="text-center"></th> 
                    </tr>
                </thead>

                <tbody>
                     @foreach(var tamanho in Model){
                        <tr>
                            <td>@tamanho.idTamanho</td>
                            <td>@tamanho.tamanho</td>
                            
                            <td class="text-center">
                                <a href="/Tamanho/Delete/@tamanho.idTamanho"  class="btn btn-sm text-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>

                            <td class="text-center">
                                <a href="/Tamanho/Update/@tamanho.idTamanho"  class="btn btn-sm text-primary">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    
    <footer class="mt-5 bg-dark" id="rodape">
        <div class="container text-white">
            <div class="row justify-content-center pt-4">

                <div class="col-12 col-md-4">
                    <a href="/Estoque/Index">
                        <img class="img-fluid" src="~/img/rnstore.png" width="200px" alt="Logo RN Store">
                    </a>
                    <p class="mt-3">Você sempre na moda</p>
                </div>

                <div class="col-12 col-md-8 align-self-center text-md-end">
                    <h5 class="mt-3 mt-md-0">Copyright © 2025 Innovatech. Todos os direitos reservados.</h5>
                </div>

            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>