<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Produto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/produto.css" asp-append-version="true">
    <script src="https://kit.fontawesome.com/4550765f78.js" crossorigin="anonymous"></script>
</head>
<body>

    @await Html.PartialAsync("_Menu")

    <!--Conteúdo da página-->
    <div class="container">

        <div class="row" style="margin-top: 100px;">
            <div class="col-sm-5 col-md-5 col-lg-7  text-center">
                <div class="text-center d-inline-block" id="foto-principal-produto">
                    <img class="img-fluid" src="~/img/tenis-1.png">
                </div>

                <div>
                    <div class="mt-4 text-center d-inline-block foto-secundaria-produto" style="border: 2px solid #1E90FF;">
                        <img class="img-fluid" src="~/img/tenis-1.png" >
                    </div>

                    <div class="mt-4 text-center d-inline-block foto-secundaria-produto">
                        <img class="img-fluid" src="~/img/tenis-2.png" >
                    </div>

                    <div class="mt-4 text-center d-inline-block foto-secundaria-produto">
                        <img class="img-fluid" src="~/img/tenis-3.png" >
                    </div>

                    <div class="mt-4 text-center d-inline-block foto-secundaria-produto">
                        <img class="img-fluid" src="~/img/tenis-4.png" >
                    </div>

                    <div class="mt-4 text-center d-inline-block foto-secundaria-produto">
                        <img class="img-fluid" src="~/img/tenis-5.png" >
                    </div>
                </div>

            </div>

            <div class="col-sm-7 col-md-7 col-lg-5 ">

                <div class="ms-5 mt-5 mt-sm-0 produto-conteudo">
                    <h3>Tênis Olympikus Proof 3 Masculino</h3>
                    <h2 class="my-4">R$ 169,99</h2>
                    <h4>Cor: AZUL</h4>

                    <div class="my-4">
                        <div>

                            <div class="text-center d-inline-block escolha-cor" style="border: 2px solid #1E90FF;">
                                <img class="img-fluid" src="~/img/tenis-1.png" >
                            </div>

                            <div class="text-center d-inline-block escolha-cor">
                                <img class="img-fluid" src="~/img/tenis-9.png" >
                            </div>

                        </div>
                    </div>

                    <div>
                        <h4>Tamanho:</h4>
                        <div>
                            <div class="text-center d-inline-block escolha-tamanho">
                                <span>38</span>
                            </div>

                            <div class="text-center d-inline-block escolha-tamanho">
                                <span>44</span>
                            </div>

                            <div class="text-center d-inline-block escolha-tamanho">
                                <span>47</span>
                            </div>

                            <div class="text-center d-inline-block escolha-tamanho">
                                <span>48</span>
                            </div>
                        </div>

                    </div>

                    <button class="btn btn-dark mt-4 btn-comprar">Comprar</button>
                </div>
            </div>
        </div>


        <hr class="my-5" style="all: unset; display: block; height: 2px; background-color: #000;">


        <div>
            <h2 class="text-center">Veja mais dos nossos produtos</h2>
        </div>


        
        <div class="row mt-5 d-none d-md-block">
            <div id="slide-produtos" class="carousel slide" data-bs-interval="false">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="row justify-content-center">
                            <div class="col-3">
                                <div class="items-carousel">
                                    <div class="text-center img-carousel">
                                        <img class="img-fluid" src="~/img/tenis-6.png">
                                    </div>

                                    <div class="info-carousel">
                                        <h5>Tênis Adidas Run Falco 3.0</h5>
                                        <h4>R$ 269,90</h4>
                                        <p>Adidas</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-3 mx-2">
                                <div class="items-carousel">
                                    <div class="text-center img-carousel">
                                        <img class="img-fluid" src="~/img/tenis-7.png">
                                    </div>

                                    <div class="info-carousel">
                                        <h5>TÊNIS OLYMPIKUS VENUM 34</h5>
                                        <h4>R$ 149,90</h4>
                                        <p>OLYMPIKUS</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-3">
                                <div class="items-carousel">
                                    <div class="text-center img-carousel">
                                        <img class="img-fluid" src="~/img/tenis-8.png">
                                    </div>

                                    <div class="info-carousel">
                                        <h5>TÊNIS NIKE COURT VISION Lo</h5>
                                        <h4>R$ 299,79</h4>
                                        <p>NIKE</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="carousel-item">
                        <div class="row justify-content-center">
                            <div class="col-3">
                                <div class="items-carousel">
                                    <div class="text-center img-carousel">
                                        <img class="img-fluid" src="~/img/tenis-6.png">
                                    </div>

                                    <div class="info-carousel">
                                        <h5>Tênis Adidas Run Falco 3.0</h5>
                                        <h4>R$ 269,90</h4>
                                        <p>Adidas</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-3 mx-3">
                                <div class="items-carousel">
                                    <div class="text-center img-carousel">
                                        <img class="img-fluid" src="~/img/tenis-7.png">
                                    </div>

                                    <div class="info-carousel">
                                        <h5>TÊNIS OLYMPIKUS VENUM 34</h5>
                                        <h4>R$ 149,90</h4>
                                        <p>OLYMPIKUS</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-3">
                               <div class="items-carousel">
                                    <div class="text-center img-carousel">
                                        <img class="img-fluid" src="~/img/tenis-8.png">
                                    </div>

                                    <div class="info-carousel">
                                        <h5>TÊNIS NIKE COURT VISION Lo</h5>
                                        <h4>R$ 299,79</h4>
                                        <p>NIKE</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#slide-produtos" data-bs-slide="prev">
                        <span style="filter:invert(1)" class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>

                    <button class="carousel-control-next" type="button" data-bs-target="#slide-produtos" data-bs-slide="next">
                        <span style="filter:invert(1)" class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>


        <div class="row mt-5 d-block d-md-none">
            <div id="slide-produtos-sm" class="carousel slide" data-bs-interval="false">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="row justify-content-center">
                            <div class="col-6">
                                <div class="items-carousel">
                                    <div class="text-center img-carousel">
                                        <img class="img-fluid" src="~/img/tenis-6.png">
                                    </div>

                                    <div class="info-carousel">
                                        <h5>Tênis Adidas Run Falco 3.0</h5>
                                        <h4>R$ 269,90</h4>
                                        <p>Adidas</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="carousel-item">
                        <div class="row justify-content-center">
                            <div class="col-8">
                                <div class="items-carousel">
                                    <div class="text-center img-carousel">
                                        <img class="img-fluid" src="~/img/tenis-7.png">
                                    </div>

                                    <div class="info-carousel">
                                        <h5>TÊNIS OLYMPIKUS VENUM 34</h5>
                                        <h4>R$ 149,90</h4>
                                        <p>OLYMPIKUS</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#slide-produtos-sm" data-bs-slide="prev">
                        <span style="filter:invert(1)" class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>

                    <button class="carousel-control-next" type="button" data-bs-target="#slide-produtos-sm" data-bs-slide="next">
                        <span style="filter:invert(1)" class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>

    </div>

    @await Html.PartialAsync("_Footer")

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>