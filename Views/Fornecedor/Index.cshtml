@model List<RNStore.Models.Fornecedor>;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estoque</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <link rel="stylesheet" type="text/css" href="~/css/produto.css" asp-append-version="true">
    
    <script src="https://kit.fontawesome.com/4550765f78.js" crossorigin="anonymous"></script>

    <script>
        setTimeout(() => {
            let alert = document.querySelector('.alert');
            if (alert) {
                let bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 4000);
    </script>
</head>
<body class="d-flex flex-column vh-100">

    <nav class="navbar navbar-dark navbar-expand-md bg-dark">
        <div class="container d-flex justify-content-between align-items-center">
            <a href="/Estoque/Index">
                <img class="navbar-brand" src="~/img/rnstore.png" width="140px" alt="Logo RN Store">      
            </a>

            <div class="d-flex gap-5 align-items-center">   
                <a href="#" style="font-size: 20px;">
                    Sair
                </a>
            </div>
        </div>
    </nav>

    
    <div class="flex-grow-1">
        <div class="container">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            <h1 class="text-center my-5">Listagem de Fornecedores</h1>

            <table class="table table-striped table-bordered table-hover mt-3">
                <thead>
                    <tr>
                        <th scope="col" >COD</th>           
                        <th scope="col" >Nome</th>  
                        <th scope="col" >CNPJ</th>          
                        
                        <th scope="col" class="text-center">Opções</th> 
                    </tr>
                </thead>

                <tbody>
                    @if (Model.FirstOrDefault() == null){
                        <td colspan="3" class="text-center">Nenhum registro encontrado</td>
                    }else{

                    
                    @foreach(var fornecedor in Model){
                        <tr>
                            <td>@fornecedor.idFornecedor</td>
                            <td>@fornecedor.nomeFornecedor</td>
                            <td>@fornecedor.cnpj</td>
                          
                            
                            <td class="text-center">
                                <a href="/Fornecedor/Delete?idFornecedor=@fornecedor.idFornecedor"  class="btn btn-sm text-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </a>

                                <a href="/Fornecedor/Update?idFornecedor=@fornecedor.idFornecedor"  class="btn btn-sm text-primary">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>

            <div class="my-5">
                <div class="text-end">
                    <a href="/Fornecedor/Create" class="btn btn-dark" >Adicionar</a>
                </div>
            </div>
        </div>
    </div>
    
    <footer class="py-3 mt-5 bg-dark" id="rodape">
        <div class="container text-white">
            <div class="row justify-content-center pt-4">

                <div class="col-12 align-self-center text-center">
                    <h5 class="mt-3 mt-md-0">Copyright © 2025 Innovatech. Todos os direitos reservados.</h5>
                </div>

            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>